<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewContainer.NewContainer3">

    <LinearLayout
        android:id="@+id/linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:fontFamily="@font/abril"
            android:text="Fill Your Cup"
            android:textAlignment="center"
            android:textColor="@color/Text1"
            android:textSize="34sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/modernsans"
            android:text="Turn on the dispenser by pressing the switch at the bottom until your glass is full. If it is full, turn it off by pressing the switch again. You can do the same thing if you want to turn it back on. When it's finished, press the next button to continue."
            android:textAlignment="center"
            android:textColor="@color/Text1"
            android:textSize="18sp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="20dp"
            android:fontFamily="@font/modernsans"
            android:text="In addition, don't lift your cup until the following display appears."
            android:textAlignment="center"
            android:textStyle="bold"
            android:textColor="@color/Text1"
            android:textSize="18sp" />
    </LinearLayout>

    <ToggleButton
        android:id="@+id/switch_pump"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:textOff=""
        android:textOn=""
        android:background="@drawable/switch_background_selector"
        android:drawableTop="@drawable/switch_selector"

        app:layout_constraintBottom_toTopOf="@+id/btnNext"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout" />


    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnNext"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/Green"
        android:fontFamily="@font/abril"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:text="Next"
        android:textColor="@color/DarkGreen"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>