<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.Dashboard"
    android:orientation="vertical"
    android:background="@color/Background1">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="5dp"
        android:paddingBottom="2dp"
        android:text="@string/app_name"
        android:fontFamily="@font/abril"
        android:textColor="@color/Background1"
        android:gravity="center"
        android:background="@color/Background2"
        />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/Main_Container"
            android:layout_marginBottom="80dp"
            android:layout_alignParentTop="true"/>

        <nl.joery.animatedbottombar.AnimatedBottomBar
            android:layout_width="match_parent"
            android:layout_height="51dp"
            android:background="@drawable/bottomnavbarshape"
            app:abb_selectedIndex="0"
            app:abb_tabs="@menu/menu"
            app:abb_selectedTabType="text"
            app:abb_tabColor="@color/Text1"
            app:abb_tabColorSelected="@color/Text1"
            app:abb_indicatorColor="@color/Text1"
            app:abb_indicatorMargin="10dp"
            app:abb_textAppearance="@style/NavbarText"
            app:abb_animationDuration="500"
            app:abb_tabAnimation="slide"
            app:abb_tabAnimationSelected="slide"
            android:id="@+id/Bottom_Navbar"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="20dp"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"/>
    </RelativeLayout>
</LinearLayout>