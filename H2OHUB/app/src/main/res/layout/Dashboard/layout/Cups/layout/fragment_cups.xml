<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Dashboard.Cups.Cups"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@color/Background2">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_margin="20dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cups"
                android:fontFamily="@font/abril"
                android:textColor="@color/Background1"
                android:textSize="48sp"
                android:layout_marginBottom="10dp"/>
            <com.google.android.material.button.MaterialButton
                android:id="@+id/btnNewCups"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:backgroundTint="@color/NavbarBackground"
                android:fontFamily="@font/abril"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:text="+ Add New Cup"
                android:textAllCaps="false"
                android:textColor="@color/Text1"
                android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="15dp"
        android:layout_marginRight="15dp"
        android:id="@+id/recycler_cups"/>
</LinearLayout>